{% for key, catProducts in products %}
    <div class="product__title">
        <h2>{{ key }}</h2>
    </div>
    {% for product in catProducts %}

        <div class="product__item">
            <div class="product__content">
                <h4 class="product__link" >
                    <a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.name }}</a>
                </h4>
                <a class="articles__image" href="{{ path('product_show', { 'id': product.id }) }}">
                    <img src="{{ asset(product.src) }}" alt="" title="">
                </a>
                <div class="product__info">{{ product.shortDescription|truncate(250)|raw }}</div>
                <p class="product__price">
                   Цена: <span class = 'product__price__amount'>{{ product.price }}</span>
                    <span class="product__price__currency">y.e</span>
                </p>
            </div>
        </div>
    {% endfor %}
    <div class="cl">&nbsp;</div>
{% endfor %}