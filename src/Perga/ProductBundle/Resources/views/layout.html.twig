{% extends '::base.html.twig' %}

{% block header %}
    <h1 id="logo"><a href="#" class="notext">beSMART</a></h1>
    <div class="socials right">
        <ul>
            <li><a href="#" class="rss">RSS</a></li>
            <li><a href="#" class="fb">Facebook</a></li>
            <li class="last"><a href="#" class="twit">Twitter</a></li>
        </ul>
    </div>
    <div class="cl">&nbsp;</div>
{% endblock header %}

{% block navigation %}
    {{ knp_menu_render('main') }}
    <div class="cl">&nbsp;</div>
{% endblock navigation %}

{% block slider %}
    {% include "PergaProductBundle:Products:slider.html.twig" %}
{% endblock slider %}

{% block main %}
    <div id="content" class="left">
        {% block content %}
            {% block welcome %}
                <div class="highlight">
                    <h3>Welcome Note</h3>
                    <img src="{{ asset('bundles/pergaproduct/images/highlight.gif') }}" alt="" class="right" />
                    <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been
                        the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley
                        of type and scrambled it to make a type specimen book.Lorem Ipsum is simply dummy text of the
                        printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever
                        since the 1500s.
                    </p>
                    <a href="#" class="more">Find out more</a>
                </div>
            {% endblock welcome %}

            <div class="projects">
                {% block products %}
                    {% include "PergaProductBundle:Products:products.html.twig" %}
                {% endblock products %}
            </div>
        {% endblock content %}
    </div>
    <div id="sidebar" class="right">
        {% block sidebar %}
            {% include "PergaProductBundle:Products:sidebar.html.twig" %}
        {% endblock sidebar %}
    </div>
    <div class="cl">&nbsp;</div>
{% endblock main %}

{% block footer %}
