{% extends "PergaProductBundle:Products:categories.html.twig" %}
{% block title %}Perga.by | {{ product.name }}{% endblock title %}
{% block metaKeywords %}{{ product.metaKeyword }}{% endblock metaKeywords %}
{% block metaDescription %}{{ product.metaDescription }}{% endblock metaDescription %}

{% block welcome %}{% endblock welcome %}
{% block products %}
<div itemscope itemtype="http://schema.org/Product">
    <div class="product__title">
        <h1 itemprop="name">{{ product.name }}</h1>
    </div>
    <div class="product__content">
        <div class="product__description">
            <img itemprop="image" class="img-float" src="{{ asset(product.src) }}"
                 alt="{{ product.name }}" title="продукция с частной пасеки: {{ product.name }}">
            {{ product.description|raw }}
        </div>
        <div class="cl">&nbsp;</div>
        {% include 'PergaProductBundle:Products:product_price.html.twig' with {'product.prices': product.prices} %}
    </div>
</div>

{% endblock products %}

{% block productList %}
  <h3>Продукция</h3>
  {{ render(controller('PergaProductBundle:Products:list', {'exclude': product.id})) }}
{% endblock productList %}


