{% extends "PergaProductBundle::layout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/startuplabshatchery/css/login.css') }}" type="text/css" media="all" />
{% endblock stylesheets %}

{% block content %}
    {% if error %}
        <div class="alert alert-error">{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}


    <form  method="post" class="form-signin" action="{{ path("fos_user_security_check") }}">
        <legend>Войти</legend>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="control-group">
            <div class="controls">
                <input type="text"  name="_username" value="{{ last_username }}" required="required"
                       placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <input type="password" name="_password" required="required"
                       placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <label class="checkbox" for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
                <input type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </div>
        </div>
    </form>
    {% endblock content %}
